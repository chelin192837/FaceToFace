
.wallet-card-wapper{
	background-color: white;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	margin: 20rpx 20rpx;
	padding: 30rpx 20rpx;
	/* 追加阴影效果 */
	box-shadow: 3px 2px 10px #dedede;
}
.wallet-card-num-title{
	margin-top: 10rpx;
	font-size: 20px;
	color: #666666;
}
.wallet-card-num{
	margin-top: 10rpx;
	font-size: 30px;
	color: #333333;
}
.wallet-card-num-desc{
	margin-top: 10rpx;
	font-size: 18px;
	color: #666666;
}
.card-image-content{
	width: 600rpx;
	height: 100rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    -webkit-flex-direction: row;
            flex-direction: row;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.card-image{
	width: 80rpx;
	height: 80rpx;
	margin-left: 20rpx;
}
.card-content{
	margin-left: 10rpx;
}
.card-arrow{
	width: 40rpx;
	height: 40rpx;
}
.card-Num-arrow{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	padding: 0rpx 20rpx;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.card-Num{
    margin-right: 10rpx;
}
.card-type{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	background-color: #FFFFFF;
	margin-top: 20rpx;
